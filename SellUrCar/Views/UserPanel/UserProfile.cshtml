
@model EntityLayer.Concrete.User

@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<br />
<h2>Profilinizi Düzenleyin</h2>

@using (Html.BeginForm("UserProfile", "UserPanel", FormMethod.Post))
{
<div class="form-group">

    <img src="@Model.UserImage" width="80" height="60" /><br />
    @Html.Label("Kullanıcı Görsel Linki")
    @Html.TextBoxFor(x => x.UserImage, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.UserImage)
    <br />
    @Html.Label("Kullanıcı Adı")
    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.UserName, null, new { @class = "text-danger" })
    <br />
    @Html.Label("Kullanıcı Soyadı")
    @Html.TextBoxFor(x => x.UserSurName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.UserSurName, null, new { @class = "text-danger" })
    <br />
    @Html.Label("Kullanıcı Maili")
    @Html.DisplayFor(x => x.UserMail, new { @class = "form-control" })
    <br />
    @Html.Label("Kullanıcı Telefonu")
    @Html.TextBoxFor(x => x.UserPhoneNumber, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.UserPhoneNumber, null, new { @class = "text-danger" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</div>
}